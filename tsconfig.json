{
	"compilerOptions": {
		"baseUrl": ".",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"paths": {
			"~/*": ["./lib/*"]
		},
		"plugins": [{ "name": "next" }],
		"types": ["bun-types", "web"]
	},
	"exclude": ["node_modules"],
	"extends": "@rubriclab/config/tsconfig",
	"include": [
		"./app/**/*.ts",
		"./app/**/*.tsx",
		"./lib/**/*.ts",
		"./lib/**/*.tsx",
		".next/types/**/*.ts",
		"next-env.d.ts",
		"types/*.d.ts"
	]
}
