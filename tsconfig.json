{
	"compilerOptions": {
		"baseUrl": ".",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"paths": {
			"~/*": ["./lib/*"]
		},
		"plugins": [{"name": "next"}],
		"types": ["web", "bun-types"]
	},
	"exclude": ["node_modules"],
	"extends": "@rubriclab/typescript-config/nextjs.json",
	"include": [
		"./app/**/*.ts",
		"./app/**/*.tsx",
		"./lib/**/*.ts",
		"./lib/**/*.tsx",
		".next/types/**/*.ts",
		"next-env.d.ts",
		"types/next-auth.d.ts"
	],
}
